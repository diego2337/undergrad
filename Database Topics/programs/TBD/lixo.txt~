CREATE VIEW selecao_usuario_site_usuarios AS SELECT nome, endereco, cidade, uf, telefone FROM shopcar.Usuario;
	CREATE VIEW selecao_usuario_site_anuncios AS SELECT shopcar.Veiculo.tipo_id, shopcar.Veiculo.modelo, shopcar.Veiculo.marca, shopcar.Veiculo.cor_id, shopcar.Veiculo.comb_id, shopcar.Veiculo.ano_carro, shopcar.Veiculo.ano_modelo_veiculo, shopcar.Veiculo.preco, shopcar.Veiculo.km, shopcar.Veiculo.descricao, FROM shopcar.Veiculo WHERE shopcar.Veiculo.placa IN (SELECT shopcar.Anuncio.placa FROM shopcar.Anuncio);
	-- CREATE VIEW selecao_usuario_site_anuncios AS SELECT *, nome, endereco, cidade, uf, telefone FROM shopcar.Veiculo, shopcar.Usuario WHERE shopcar.Veiculo.placa IN (SELECT shopcar.Anuncio.placa FROM shopcar.AnuncioUsuario) AND shopcar.Usuario.cpf IN (SELECT shopcar.AnuncioUsuario.cpf_usuario FROM shopcar.AnuncioUsuario.cpf_usuario);
