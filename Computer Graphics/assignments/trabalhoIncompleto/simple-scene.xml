<?xml version="1.0" encoding="utf-8"?>
<rt>
	<image>
		<width>1240</width>
		<height>768</height>
	</image>
	<camera>
		<position>0 0 10</position>
		<to>0 0 10</to>
		<up>0 1 0</up>
		<angle>60</angle>
		<aspect>16:9</aspect>
		<projection>perspective</projection>
	</camera>
	<scene name="simple - scene">
		<background>0.1 0.2 0.05</background>
		<ambient>0.5 0.5 0.5</ambient>
		<mesh file="cow.obj">
			<transform>
				<scale>0.3</scale>
				<rotation>
					<axis>0 0 1</axis>
					<angle>30</angle>
				</rotation>
				<position>-3 0 4</position>
			</transform>
			<material>
				<ambient>0.2 0.2 0.2</ambient>
				<diffuse>0.5 0 0</diffuse>
				<spot>0.3 0 0</spot>
				<shine>10</shine>
			</material>
		</mesh>
		<sphere>
			<center>-2 0 0</center>
			<radius>1</radius>
		</sphere>
		<mesh file="f-16.obj">
			<transform>
				<scale>0.5 0.5 3 </scale>
				<rotation>
					<axis>1 0 3</axis>
					<angle>50</angle>
				</rotation>
				<position>10 10 10</position>
			</transform>
		</mesh>
		<mesh file="humanoid.obj">
			<transform>
				<scale>0.163</scale>
				<rotation>
					<axis>1 0 0</axis>
					<angle>42.1</angle>
				</rotation>
				<position>0 0 4</position>
			</transform>
		</mesh>

		<box>
			<orientation>4 1 3</orientation>
		</box>
		<cone>
			<center>-1 2 3</center>
			<radius>2</radius>
			<height>1</height>
			<segments>4</segments>
		</cone>
		<cylinder>
			<center>0 0 2</center>
			<radius>0.2</radius>
		</cylinder>
		<light>
			<position>-1 0 0 1</position>
			<color>1 1 1</color>
			<falloff>1</falloff>
		</light>
		<mesh file="lamp.obj">
			<transform>
				<scale>1 1 1</scale>
				<position>-5 0 0</position>
				<rotation>
					<axis>0 1 0</axis>
					<angle>30</angle>
				</rotation>
			</transform>
		</mesh>
	</scene>
</rt>
